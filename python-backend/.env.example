# Copy to .env and edit values before running docker-compose

# Postgres (docker-compose service: db)
POSTGRES_DB=healthcare
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Application database URL (PostgreSQL)
# Example for docker-compose networking (service name 'db'):
DATABASE_URL=postgresql://postgres:postgres@db:5432/healthcare

# Security secrets (REQUIRED)
# Generate a strong Fernet key:
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
JWT_SECRET=change-me-very-secret
ENCRYPTION_KEY=put-your-generated-fernet-key-here
# Setup key for one-time super admin creation (required for /api/auth/setup/super-admin)
SUPER_ADMIN_SETUP_KEY=change-me-setup-key

# CORS / WebSocket allowed origins (comma-separated)
ALLOW_ORIGINS=http://localhost:3000

# Optional SSL for uvicorn
# SSL_KEYFILE=
# SSL_CERTFILE=

